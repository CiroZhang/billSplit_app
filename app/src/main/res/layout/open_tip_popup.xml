<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/delete_button"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/tip_button1"
        android:layout_width="118dp"
        android:layout_height="118dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="39dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/tip_button1" />

    <ImageView
        android:id="@+id/tip_button2"
        android:layout_width="118dp"
        android:layout_height="118dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="39dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tip_button1"
        android:background="@drawable/tip_button2" />

    <ImageView
        android:id="@+id/tip_button3"
        android:layout_width="118dp"
        android:layout_height="118dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/tip_button1"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/tip_button3" />

    <ImageView
        android:id="@+id/tip_button4"
        android:layout_width="118dp"
        android:layout_height="118dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/tip_button2"
        app:layout_constraintStart_toEndOf="@id/tip_button3"
        android:background="@drawable/tip_button4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="29dp"
        app:layout_goneMarginStart="34dp"
        app:layout_constraintTop_toBottomOf="@id/tip_button3"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/avenir_roman"
        android:text="Custom percent"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="118dp"
        android:layout_height="42dp"
        android:layout_marginStart="170dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="29dp"
        app:layout_constraintTop_toBottomOf="@id/tip_button4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/even_tip_frame" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="260dp"
        android:layout_marginTop="30.5dp"
        app:layout_constraintTop_toBottomOf="@id/tip_button4"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/avenir_book"
        android:text="%"
        android:textAlignment="center"
        android:textColor="#FFC6C6C6"
        android:textSize="14sp"
        android:visibility="visible" />

    <EditText
        android:id="@+id/popup_tip_edit_text"
        android:layout_width="80dp"
        android:layout_height="37dp"
        android:layout_marginStart="174dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tip_button4"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@android:color/transparent"
        android:fontFamily="@font/avenir_book"
        android:hint="Enter tip"
        android:inputType="numberDecimal"
        android:maxLength="3"
        android:textAlignment="viewEnd"
        android:textColor="@color/black"
        android:textSize="14sp" />
</androidx.constraintlayout.widget.ConstraintLayout>