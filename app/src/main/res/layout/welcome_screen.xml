<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="378dp"
                    android:layout_height="138dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/app_logo" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="38dp"
                    android:text="Number of people in party"
                    android:textSize="16sp"
                    android:fontFamily="@font/avenir_medium"
                    android:textColor="@color/black"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="132dp"
                        android:layout_height="42dp"
                        android:layout_marginStart="37dp"
                        android:layout_marginTop="29dp"
                        android:background="@drawable/rounded_rectangle1" />

                    <EditText
                        android:id="@+id/people_edit_text"
                        android:layout_width="115dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="49dp"
                        android:layout_marginTop="30dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/avenir_book"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textAlignment="viewEnd"
                        android:textSize="16sp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="31dp"
                    android:fontFamily="@font/avenir_medium"
                    android:text="Total cost of the meal"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="132dp"
                        android:layout_height="42dp"
                        android:layout_marginStart="80dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/rounded_rectangle1" />

                    <EditText
                        android:id="@+id/cost_edit_text"
                        android:layout_width="115dp"
                        android:layout_height="42dp"
                        android:layout_marginStart="88dp"
                        android:layout_marginTop="20dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/avenir_book"
                        android:inputType="numberDecimal"
                        android:maxLength="7"
                        android:textAlignment="viewEnd"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="90dp"
                        android:layout_marginTop="31dp"
                        android:fontFamily="@font/avenir_book"
                        android:text="$"
                        android:textAlignment="center"
                        android:textColor="#FF000000"
                        android:textSize="16sp"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="83dp"
                        android:layout_marginTop="67dp"
                        android:fontFamily="@font/avenir_book"
                        android:text="Without tax and tip"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="22dp"
                    android:text="Province/Territory"
                    android:fontFamily="@font/avenir_medium"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>

                <Spinner
                    android:id="@+id/province_list"
                    android:layout_width="347dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/rectangle1" />

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tax_text"
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginTop="14dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:fontFamily="@font/avenir_book"
                    android:text="0% PST  0% GST  0% HST"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:layout_marginStart="65dp"
                    android:layout_marginTop="76dp"
                    android:fontFamily="@font/avenir_book"
                    android:text="How do you want to split the bill?"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/individual_split_button"
                    android:layout_width="347dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/rounded_rectangle2"
                    android:text="Individual"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/even_split_button"
                    android:layout_width="347dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="60dp"
                    android:background="@drawable/rounded_rectangle2"
                    android:text="Evenly"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>