<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#FFf6f6f6">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/delete_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/delete_button" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/dish_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/avenir_semi_bold"
                android:textAlignment="center"
                android:text="Dish 1"
                android:textColor="#FF000000"
                android:textSize="18sp"
                android:background="@android:color/transparent"/>

            <ImageButton
                android:id="@+id/price_box"
                android:layout_width="102dp"
                android:layout_height="42dp"
                android:layout_marginStart="214dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/rounded_rectangle4" />

            <EditText
                android:id="@+id/dish_price"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="217dp"
                android:layout_marginTop="17dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/avenir_book"
                android:text="$00.00"
                android:textAlignment="viewEnd"
                android:textColor="#FF000000"
                android:textDirection="rtl"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/expand_collapse_button"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginStart="328dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/collapse_button" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/shared_with_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginTop="63dp"
            android:fontFamily="@font/avenir_book"
            android:text="Shared with"
            android:textAlignment="center"
            android:textColor="#FF000000"
            android:textSize="16sp"
            android:visibility="visible" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/shared_profile_list_view"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="95dp"
            android:orientation="horizontal"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/alcohol_image"
            android:layout_width="139dp"
            android:layout_height="56dp"
            android:layout_marginStart="136dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/alcohol_unchecked"
            android:visibility="visible" />

    </RelativeLayout>

</RelativeLayout>


