<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFf9f9f9"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/delete_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/delete_button" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/dish_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/avenir_semi_bold"
                android:maxLength="17"
                android:minEms="1"
                android:text="New Dish"
                android:textAlignment="center"
                android:textColor="#FF000000"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/price_box"
                android:layout_width="102dp"
                android:layout_height="42dp"
                android:layout_marginStart="214dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/rounded_rectangle4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="225dp"
                android:layout_marginTop="16.5dp"
                android:fontFamily="@font/avenir_book"
                android:text="$"
                android:textAlignment="center"
                android:textColor="#FF000000"
                android:textSize="16sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/dish_price"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginStart="217dp"
                android:layout_marginTop="7dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/avenir_book"
                android:hint="00.00"
                android:inputType="numberDecimal"
                android:maxLength="7"
                android:textAlignment="viewEnd"
                android:textColor="#FF000000"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/expand_collapse_button"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginStart="328dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/collapse_button" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/shared_with_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/avenir_book"
            android:text="Tap to assign"
            android:textAlignment="center"
            android:textColor="#FF000000"
            android:textSize="16sp"
            android:visibility="visible" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/shared_profile_list_view"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/alcohol_image"
                android:layout_width="139dp"
                android:layout_height="58dp"
                android:layout_marginStart="136dp"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:background="@drawable/alcohol_unchecked"
                android:cropToPadding="true"
                android:padding="10dp"
                android:visibility="visible" />

        <ImageButton
            android:id="@+id/alcohol_check"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="260dp"
            android:layout_marginTop="60dp"
            android:adjustViewBounds="true"
            android:background="@drawable/checkmark"
            android:cropToPadding="true"
            android:padding="10dp"
            android:visibility="gone" />

        </RelativeLayout>

        <ImageButton
            android:id="@+id/line"
            android:layout_width="379dp"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rectangle3"
            android:visibility="visible" />

    </LinearLayout>

</LinearLayout>


