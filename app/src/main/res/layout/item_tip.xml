<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tip_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/avenir_roman"
            android:text="name"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/tip_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="245dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/even_tip_frame" />

        <TextView
            android:id="@+id/tip_percentage_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="316dp"
            android:layout_marginTop="22.5dp"
            android:fontFamily="@font/avenir_book"
            android:text="%"
            android:textAlignment="center"
            android:textColor="#FFC6C6C6"
            android:textSize="14sp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/tip_edit_text"
            android:layout_width="60dp"
            android:layout_height="37dp"
            android:layout_marginStart="252dp"
            android:layout_marginTop="13dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/avenir_book"
            android:hint="Enter tip"
            android:inputType="number"
            android:maxLength="3"
            android:textAlignment="viewEnd"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/transit_enter_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="355dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/transit_enter_exit" />

        <ImageView
            android:id="@+id/tip_layout_greyed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="245dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/even_tip_frame_greyed"
            android:visibility="gone"/>

    </RelativeLayout>

</LinearLayout>
